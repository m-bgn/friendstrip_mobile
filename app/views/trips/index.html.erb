<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1469854523086-cc02fe5d8800?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=1008&q=80 );">
  <div>
    <div class="container text-center">
      <div class="index-title mb-5">
        <h1>Your trips</h1>
      </div>
      <div>
        <%= link_to  "Add a trip", new_trip_path, class: "button-orange" %>
      </div>
      <div class="row d-flex text-end">
        <div class="">
        <h4><%= link_to "Check your next trip" %></h4>
        <h4><%#= link_to "5 past trips" %></h4>
        </div>
      </div>
    </div>
  </div>
</div>


<div class="container trip-index">

  <div class="row" >
    <% @trips.each do |trip| %>
      <div class="col-6">

        <%= link_to trip_path(trip), class: "trip-card-link" do%>
          <div class="trip-card <%= "past-trip" if trip.end_date < Date.today %> " >
            <div class="trip-card-top" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('https://source.unsplash.com/600x200/?<%= trip.destination %>,')">
              <div class="avatar-card">
                <% if trip.user.avatar.attached? %>
                  <p><%= cl_image_tag trip.user.avatar.key, width: 50, height: 50, crop: :fill, style: "border-radius: 50%;", class: "image" %></p>
                <% else %>
                  <%= image_tag("avatar.png", width: 50, height: 50, crop: :fill, style: "border-radius: 50%;", class: "image") %>
                <% end %>
                <div class="middle">
                  <div class="text">
                    <%= trip.user.first_name %>
                  </div>
                </div>
              </div>
              <h2><%= trip.title %></h2>
            </div>
            <div class="trip-card-bottom">

              <p><%= trip.start_date %> / <%= trip.end_date %></p>
              <div class="trip-invitees">
                <% trip.invites.each do |invite| %>
                  <% if invite.user.avatar.attached? %>
                    <%= cl_image_tag invite.user.avatar.key, width: 30, height: 30, crop: :fill, class: "trip-invitee" %>
                  <% else %>
                    <%= image_tag("avatar.png", class: "trip-invitee") %>
                  <% end %>
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>

