<div class="banner " style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)),url(https://images.unsplash.com/photo-1469854523086-cc02fe5d8800?ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&ixlib=rb-1.2.1&auto=format&fit=crop&w=1008&q=80 );">
  <div>
    <div class="container text-center">
      <div class="index-title mb-5">
        <h1>Your invites</h1>
      </div>
      <div>
        <%= link_to  "Add a trip", new_trip_path, class: "button-orange" %>
      </div>
      <div class="row d-flex text-end">
        <div>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="mt-2 user-invites container">

  <div class="row">
    <% if @pending_invites.count == 0 %>
      <p> You have no pending invites... Maybe you should go back to <%= link_to "your trips", trips_path %></p>
    <% else %>
      <h2>My pending invites <%= "(#{@pending_invites.count})" %> </h2>
      <div class="container">
        <%= render "invite_card", invites: @pending_invites.uniq %>  
      </div>
    <% end %>
  </div>
</div>
